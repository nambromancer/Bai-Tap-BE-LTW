@model _18DH110115_LTW.Models.ViewModel.HomeProductVM

<link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />

@* Hiển thị danh sách sản phẩm nổi bật *@
@if (Model.FeaturedProducts != null && Model.FeaturedProducts.Any())
{
    <section class="container-fluid featureProd">
        <h2>Sản phẩm nổi bật</h2>
        <ul class="feature-container">
            @foreach (var product in Model.FeaturedProducts)
            {
                <li class="fproduct-item">
                    <div>
                        <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                            <img src="@Url.Content(product.ProductImage)" alt="@product.ProductName" />
                        </a>
                    </div>
                    <div>
                        <p class="prodPrice">
                            @Html.DisplayFor(modelItem => product.ProductPrice)
                        </p>
                        <p class="prodName">
                            @Html.DisplayFor(modelItem => product.ProductName)
                        </p>
                        <p class="prodCate">
                            @Html.DisplayFor(modelItem => product.Category.CategoryName)
                        </p>
                        <p class="prodSale">
                            Đã bán:&nbsp; @Html.DisplayFor(modelItem => product.OrderDetails.Count)
                        </p>
                    </div>
                </li>
            }
        </ul>
    </section>
    <hr />
}