@model _18DH110115_LTW.Models.ViewModel.ProductDetailsVM
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/CustomerDetailProduct.css" />

<div class="container-fluid pro">
    <div class="row">
        <!-- Khối bên trái -->
        <div class="col-md-3 pro-section">
            @*Ảnh sản phẩm*@
            <img src="@Url.Content(Model.product.ProductImage)" alt="@Model.product.ProductName" />
        </div>
        <!-- khối ở giữa -->
        <div class="col-md-6 pro-section">
            @*Phần thông tin sản phẩm*@
            <div>
                <h4><strong>@Html.DisplayFor(model => model.product.ProductName)</strong></h4>
                <p class="pro-sale">Đã bán:&nbsp; @Model.product.OrderDetails.Count</p>
                <p class="pro-price">@Model.product.ProductPrice.ToString("C")</p>
                <p>Tủ sách:&nbsp; @Model.product.Category.CategoryName</p>
                <hr />
                <h5><strong>Mô tả</strong></h5>
                <p>@Model.product.ProductDescription</p>
            </div>
            <hr />

            <!-- Khối Related Product -->
            <div>@Html.Partial("_PVRelatedProduct", Model)</div>
        </div>
        <!-- khối bên phải -->
        <div class="col-md-3">
            <div id="pro-right">
                @Html.Partial("_PVProductRight", Model)
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        (function () {
            // Auto update subtotal via AJAX whenever quantity changes (works after DOM replacement)
            $(document).on('input', '#pro-right .js-qty', function (e) {
                e.preventDefault();
                var $form = $(this).closest('form');
                $.get($form.attr('action'), $form.serialize(), function (html) {
                    $('#pro-right').html(html);
                });
            });

            // Prevent Enter from causing full-page navigation on qty
            $(document).on('keydown', '#pro-right .js-qty', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                }
            });

            // Ensure TopProducts pager loads via AJAX (no jump-to-top)
            $(document).on('click', '#pro-right .pagination a', function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
                $.get(url, function (html) {
                    $('#pro-right').html(html);
                });
            });
        })();
    </script>
}