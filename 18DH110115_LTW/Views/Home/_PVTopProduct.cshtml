@model _18DH110115_LTW.Models.ViewModel.ProductDetailsVM
@using PagedList.Mvc

<link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />

@if (Model.TopProducts != null && Model.TopProducts.Any())
{
    <section class="container-fluid listProduct">
        <h4 style="font-weight:bold;">Sản phẩm bán chạy</h4>
        <ul class="list-container">
            @foreach (var product in Model.TopProducts)
            {
                <li class="lproduct-item">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                        <img src="@Url.Content(product.ProductImage)" alt="@product.ProductName" />
                    </a>
                    <div>
                        <h5>@Html.DisplayFor(_ => product.ProductName)</h5>
                        <p class="prodSale">@Html.DisplayFor(_ => product.ProductPrice)</p>
                    </div>
                </li>
            }
        </ul>
    </section>

    <div class="pagination-container">
        @Html.PagedListPager(
            Model.TopProducts,
            page => Url.Action("ProductDetails", new { id = Model.product.ProductID, quantity = Model.quantity, page }),
            PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "pro-right", InsertionMode = InsertionMode.Replace }
            )
        )
    </div>
}